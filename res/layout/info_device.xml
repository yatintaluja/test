<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/mobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mobileData"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:text="mobileNumber"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mobileData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/deviceLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="mobileData"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/networkProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mobileData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="networkProvider"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/deviceLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="162dp"
        android:layout_marginTop="20dp"
        android:text="deviceLog&quot;"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>